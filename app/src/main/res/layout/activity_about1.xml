<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        >

        <RelativeLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_adkar_background"
                />

            <ImageView
                android:id="@+id/img_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_adkar_title"
                />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:layout_alignTop="@id/img_title"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_marginTop="-20dp"
                android:padding="10dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                />

            <include
                android:id="@+id/include_activate_adkar_card"
                layout="@layout/include_activate_adkar"
                android:layout_below="@+id/img_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="15dp"
                />

            <include
                android:id="@+id/include_fast_adkar_card"
                layout="@layout/include_fast_adkar"
                android:layout_below="@+id/include_activate_adkar_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                />


            <include
                android:id="@+id/include_category_adkar_card"
                layout="@layout/include_adkar_category"
                android:layout_below="@+id/include_fast_adkar_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="50dp"
                />


        </RelativeLayout>

    </ScrollView>


</layout>