<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blan"
        >

        <LinearLayout
            android:id="@+id/linear_pages"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <TextView
                android:id="@+id/tv_sura_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/tv_mini_size"
                android:background="@color/white"
                android:gravity="center"
                tools:text="سورة النمل" />

            <TextView
                android:id="@+id/tv_page_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:textSize="@dimen/tv_mini_size"
                android:background="@color/white"
                android:gravity="center"
                tools:text="ص 20" />

            <TextView
                android:id="@+id/tv_juz_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/tv_mini_size"
                android:background="@color/white"
                android:gravity="center"
                tools:text="الجزء 2" />

        </LinearLayout>


        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfViewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_pages"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</layout>