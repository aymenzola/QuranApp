<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_parent"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_play"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_weight="0"
                android:src="@drawable/ic_play" />

            <RelativeLayout
                android:id="@+id/realative_play"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pause">

                <TextView
                    android:id="@+id/item_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/pregress"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="10dp"
                    android:text=""
                    android:textSize="11sp"
                    tools:text="02:25" />

                <TextView
                    android:id="@+id/item_audio_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/pregress"
                    android:layout_alignParentEnd="true"
                    android:text=""
                    android:textSize="11sp"
                    tools:text="10:30" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/pregress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:progress="0" />
            </RelativeLayout>

            <TextView
                android:id="@+id/img_change_speed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0"
                android:background="@drawable/shape_cercel"
                android:fontFamily="@font/roboto_medium_numbers"
                android:gravity="center"
                android:text="x1"
                android:textColor="@color/white" />

            <View
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/tv_reader_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0"
                android:ellipsize="marquee"
                android:fontFamily="@font/ffshamel_book"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                tools:text="عبد الباسط عبد الصمد"
                android:textSize="13sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/reader_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/alafasy"
                app:civ_border_color="@color/purple_700"
                app:civ_border_width="0dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>
</layout>