<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blan"
            android:textDirection="rtl">


            <ImageView
                android:id="@+id/img_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:src="@drawable/ic_adkar_background" />

            <RelativeLayout
                android:id="@+id/relative_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:padding="17dp"
                    android:src="@drawable/ic_menu" />

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:padding="20dp"
                    android:src="@drawable/ic_search" />

                <TextView
                    android:id="@+id/tv_change_riwaya"
                    android:layout_width="150dp"
                    android:layout_height="?actionBarSize"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/ffshamel_family_bold"
                    android:gravity="center"
                    android:text="مصحف الأحكام"
                    android:visibility="visible"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    app:drawableStartCompat="@drawable/round_keyboard_arrow_down_24" />

            </RelativeLayout>


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_linear"
                android:layout_below="@+id/relative_tool_bar"
                android:layout_centerInParent="true"
                android:background="@color/blan"
                android:visibility="visible" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/blan"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/purple_700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/ffshamel_book"
                    android:text="جاري التحميل "
                    android:textColor="@color/tv_gri_color"
                    android:textSize="@dimen/tv_normal_size_tablet" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.cardview.widget.CardView
                android:id="@+id/download_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/blan"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/download_linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blan">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/purple_700" />

                    <TextView
                        android:id="@+id/tv_download_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ffshamel_book"
                        android:lines="1"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="جاري التحميل ..."
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_download_title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_cancel_download"
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:layout_below="@+id/tv_download_title"
                            android:layout_alignParentStart="true"
                            android:layout_weight="0"
                            android:background="?selectableItemBackground"
                            android:fontFamily="@font/al_qalam_quran"
                            android:gravity="center"
                            android:lines="1"
                            android:padding="15dp"
                            android:src="@drawable/ic_close_icon"
                            android:text="0"
                            android:textColor="@color/purple_700"
                            android:textSize="20sp"

                            app:tint="@color/black" />

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/purple_700" />

                        <TextView
                            android:id="@+id/tv_download_progress"
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:layout_weight="0"
                            android:fontFamily="@font/al_qalam_quran"
                            android:gravity="center"
                            android:lines="1"
                            android:text="0"
                            android:textColor="@color/purple_700"
                            android:textSize="20sp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/relative_pages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottom_linear"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-2dp"
                    android:background="@drawable/ic_subtract"
                    android:src="@drawable/ic_navigat3" />

                <LinearLayout
                    android:id="@+id/linear_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_top"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <RelativeLayout
                        android:id="@+id/linear_readers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="2dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_top_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="7dp"
                            android:paddingBottom="5dp"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/ffshamel_family_bold"
                            android:gravity="center"
                            android:text="سماع القراء :" />

                        <ImageView
                            android:id="@+id/img_close_audio_layout"
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:padding="23dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_navigat1" />

                        <include
                            android:id="@+id/include_audio_playing"
                            layout="@layout/include_audio_playing2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_top_title"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"
                            tools:visibility="visible" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_card_bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true"
                >
                <LinearLayout
                    android:id="@+id/linear_more"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/img_save"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0"
                        android:padding="10dp"
                        android:src="@drawable/ic_save_new" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/img_open_readers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:padding="10dp"
                        android:src="@drawable/ic_open_audio" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/img_tafsir"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:padding="10dp"
                        android:src="@drawable/ic_tafsir" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/img_full_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:padding="10dp"
                        android:src="@drawable/ic_full_screen1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_pages"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/img_movenext"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:padding="10dp"
                        android:src="@drawable/ic_navigat2" />

                    <TextView
                        android:id="@+id/tv_sura_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="سورة النمل" />

                    <TextView
                        android:id="@+id/tv_page_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="ص 20" />

                    <TextView
                        android:id="@+id/tv_juz_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="الجزء الثاني" />

                    <ImageView
                        android:id="@+id/img_moveback"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:padding="10dp"
                        android:src="@drawable/ic_navigat1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_riwaya_list"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/relative_tool_bar"
                android:background="@drawable/shape_card"
                android:layout_marginTop="-15dp"
                android:visibility="gone"
                tools:visibility="visible"
                >
                <TextView
                    android:id="@+id/tv_riwaya1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="مصحف ورش" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#EBEAE6"
                    />
                <TextView
                    android:id="@+id/tv_riwaya2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="مصحف حفص" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#EBEAE6"
                    />
                <TextView
                    android:id="@+id/tv_riwaya3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="مصحف الأحكام" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#EBEAE6"
                    />
                <TextView
                    android:id="@+id/tv_riwaya4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:visibility="gone"
                    android:text="مصحف التفاعلي" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#EBEAE6"
                    />
                <TextView
                    android:id="@+id/tv_riwaya5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="مصحف الفرنسي" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#EBEAE6"
                    /> <TextView
                android:id="@+id/tv_riwaya6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="مصحف الانجليزي" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#EBEAE6"
                    />


            </LinearLayout>



        </RelativeLayout>

        <!-- Navigation Drawer -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:headerLayout="@layout/drawer_header">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/drawer_header_sura" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/nested_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.navigation.NavigationView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/relative_reader_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:paddingTop="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/shape_card"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:visibility="gone"
            app:cardElevation="2dp"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:paddingTop="2dp"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_buttons"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/btn_hafs_readers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="حفص"
                    android:textSize="@dimen/tv_normal_size" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="#EBEAE6"
                    android:layout_weight="0"
                    />

                <TextView
                    android:id="@+id/btn_warsh_readers"
                    android:text="ورش"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:lines="1"
                    android:textSize="@dimen/tv_normal_size"
                    android:visibility="visible"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_centerHorizontal="true"
                android:background="#EBEAE6"
                android:layout_below="@+id/linear_buttons"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_readers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="5"
                android:layout_below="@+id/divider"
                android:layout_centerHorizontal="true"
                tools:listitem="@layout/item_reader_new"
                android:layout_above="@+id/btn_dismis"/>

            <TextView
                android:id="@+id/btn_dismis"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:lines="1"
                android:background="#F4F4F4"
                android:text="اخفاء"
                android:textSize="@dimen/tv_normal_size" />


        </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.drawerlayout.widget.DrawerLayout>




</layout>