<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_dikr_category">

        <TextView
            android:id="@+id/tv_dikr_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|top"
            android:paddingEnd="10dp"
            android:lines="1"
            android:paddingStart="10dp"
            android:fontFamily="@font/ffshamel_book"
            android:text="أذكار الحج و العمرة"
            android:textColor="@color/tv_gri_color"
            android:textSize="@dimen/tv_small_size" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:src="@drawable/ic_adkar_sabah_images"
            android:adjustViewBounds="true"
            app:riv_corner_radius_top_right="0dp"
            app:riv_corner_radius_top_left="0dp"
            app:riv_corner_radius_bottom_left="10dp"
            app:riv_corner_radius_bottom_right="10dp"
            />

    </LinearLayout>

</layout>