<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_parent"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_card"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_sura_number"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0"
                android:background="@drawable/ic_sura_number_holder"
                android:gravity="center"
                tools:text="100"
                android:textSize="12sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_ayat_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0"
                android:gravity="center"
                tools:text="( اياتها 7 ) "
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/tv_small_size" />


            <TextView
                android:id="@+id/tv_sura_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0"
                android:fontFamily="@font/ffshamel_family_bold"
                tools:text="سورة الفاتحة"
                android:textSize="@dimen/tv_normal_size" />

            <ImageView
                android:id="@+id/img_place"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_makia"
                app:civ_border_color="@color/purple_700"
                app:civ_border_width="0dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>
</layout>