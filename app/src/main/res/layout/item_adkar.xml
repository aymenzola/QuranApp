<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
>

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dikr_category"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/img_save"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_unsaved_new"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/img_save"
            android:fontFamily="@font/ffshamel_family_bold"
            android:text="اذكار الصباح"
            android:textColor="@color/tv_gri_color"
            android:textSize="@dimen/tv_small_size" />

        <TextView
            android:id="@+id/tv_dikr_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_save"
            android:layout_toEndOf="@+id/img_save"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_centerHorizontal="true"
            android:text="اللهم إني أسألك علماً نافعاً، ورزقاً طيباً، وعملاً متقبلاً"
            android:fontFamily="@font/ffshamel_book"
            android:textColor="#424242"
            android:textSize="@dimen/tv_small_size"
            android:visibility="gone"
            />

    </RelativeLayout>

</layout>