<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_card"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:id="@+id/img_save"
            android:layout_width="@dimen/save_adkar_size"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_unsaved_new" />


        <LinearLayout
            android:id="@+id/top_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_save"
            android:gravity="top|end"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/tv_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_star2" />

            <TextView
                android:id="@+id/tv_dikr_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:ellipsize="end"
                android:fontFamily="@font/ffshamel_family_bold"
                android:gravity="top|start"
                android:maxLines="2"
                android:textColor="@color/tv_gri_color"
                android:textSize="@dimen/tv_small_size"
                tools:text="كتاب الأصول الخاص بي الكتاب الدي يجب فهمه جيدا الأصول الخاص بي الكتاب الأصول عنوان الكتاب" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_dikr_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_linear"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_dikr_text_back"
            android:backgroundTint="#F3F3F3"
            android:fontFamily="@font/ffshamel_book"
            android:gravity="center|start"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:maxLines="2"
            tools:text="الباب الأول : العلم وأهميته في حياة المسلم العلم وأهميته في حياة المسلم العلم وأهميته في حياة المسلم العلم وأهميته في حياة المسلم العلم وأهميته في حياة المسلم العلم "
            android:textColor="@color/tv_gri_color"
            android:textSize="@dimen/tv_small_size" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_dikr_title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="#FAFBFD" />

        <TextView
            android:id="@+id/tv_open_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line"
            android:layout_centerInParent="true"
            android:background="?selectableItemBackground"
            android:drawablePadding="3dp"
            android:fontFamily="@font/ffshamel_family_bold"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingTop="8dp"
            android:paddingEnd="15dp"
            android:paddingBottom="6dp"
            android:text="تابع"
            android:textColor="#E6A34C"
            android:textSize="@dimen/tv_normal_size"
            app:drawableStartCompat="@drawable/ic_arrow_1" />


    </RelativeLayout>
</layout>

