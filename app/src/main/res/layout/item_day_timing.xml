                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:checked="true"
                android:padding="7dp"
                android:src="@drawable/time_active"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_alarm_on_24" />

            <TextView
