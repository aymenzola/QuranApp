<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/blan"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blan">

            <TextView
                android:id="@+id/tv_sura_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_toStartOf="@+id/tv_count"
                android:fontFamily="@font/ffshamel_book"
                android:text="كتاب بدء الوحي"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_normal_size" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="@dimen/count_image_size"
                android:layout_height="@dimen/count_image_size"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_star"
                android:gravity="center"
                android:padding="10dp"
                android:text="1"
                android:textColor="@color/item_count_color"
                android:textSize="12sp" />


            <View
                android:id="@+id/click_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_sura_name"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-30dp"
                android:background="?selectableItemBackground" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>