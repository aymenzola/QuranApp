<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/linear_parent"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">







            <TextView
                android:id="@+id/tv_reader_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/reader_image"
                android:layout_toEndOf="@+id/tv_play"
                android:layout_weight="0"
                android:ellipsize="end"
                android:fontFamily="@font/ffshamel_book"
                android:singleLine="true"
                tools:text="عبد الباسط عبد الصمد"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_normal_size" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/reader_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/alafasy"
                app:civ_border_color="@color/purple_700"
                app:civ_border_width="0dp" />

            <ImageView
                android:id="@+id/img_play"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:padding="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_play" />


            <TextView
                android:id="@+id/tv_play"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_play"
                android:background="?selectableItemBackground"
                android:fontFamily="@font/ffshamel_family_bold"
                android:gravity="center"
                android:text="تشغيل"
                android:textColor="#ECBA79"
                android:textSize="@dimen/tv_small_size" />
        </RelativeLayout>


    </RelativeLayout>
</layout>