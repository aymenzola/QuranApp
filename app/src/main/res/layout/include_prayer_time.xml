<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:padding="5dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_mode_silent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/image_silent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:padding="5dp"
                android:src="@drawable/ic_adhan_silent"
                app:tint="@color/tv_gri_color" />

            <TextView
                android:id="@+id/tv_silent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ffshamel_book"
                android:text="الوضع \nالصامت"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_mode_vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/image_vibration"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:padding="5dp"
                android:src="@drawable/ic_adhan_vibration"
                app:tint="@color/tv_gri_color" />

            <TextView
                android:id="@+id/tv_vibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ffshamel_book"
                android:text="الوضع \nالهزاز"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_mode_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_normal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:padding="5dp"
                android:src="@drawable/ic_adhan_active"
                app:tint="@color/tv_gri_color" />

            <TextView
                android:id="@+id/tv_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ffshamel_book"
                android:text="الوضع \nالمرتفع"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/linear_fajr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_prayer_name_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ffshamel_family_bold"
            android:text="الفجر 05:30 "
            android:textSize="@dimen/tv_normal_size" />

        <TextView
            android:id="@+id/tv_prayer_adhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ffshamel_book"
            android:text="ادان الحرم المكي"
            android:textColor="#E6A34C"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_selecter"
            android:drawablePadding="5dp"
            android:textSize="11sp"
            android:text="تشغيل في الوضع الصامت "
            android:textColor="#4E261E" />
    </LinearLayout>
</LinearLayout>
