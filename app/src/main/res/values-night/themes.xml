<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuranApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_500</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/ffshamel_book</item>


    </style>


    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearance">@style/BottomNavigationTextAppearance</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/frutiger_lt_arabic</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AlertDialogRounded" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearanceOverlayAlertDialog</item>
    </style>

    <style name="RoundedShapeAppearanceOverlayAlertDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>

