            android:textColor="@color/text_color"
            android:textSize="@dimen/tv_normal_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_choose_text"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_below="@+id/tv_text"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ffshamel_family_bold"
            android:gravity="center"
            android:text="Ø§Ø®ØªÙŠØ§Ø± Ø§Ù„Ø°ÙƒØ±"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/tv_small_size"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/round_keyboard_arrow_down_24"
            app:drawableTint="@color/purple_500" />

        <ImageView
            android:id="@+id/img_balls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/include_fast_adkar_card"
            android:layout_below="@+id/tv_choose_text"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_balls_element2" />

        <include
            android:id="@+id/include_fast_adkar_card"
            layout="@layout/include_subha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            tools:visibility="visible" />

        <RelativeLayout
            android:id="@+id/relative_choose_dikr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:paddingTop="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_card"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:visibility="gone"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="5"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                tools:listitem="@layout/item_choose_dikr"
                android:layout_above="@+id/linear_buttons"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/btn_add_new_dikr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="add"
                    android:layout_weight="1"
                    android:layout_above="@+id/btn_cancel_new_dikr"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_button"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Ø°ÙƒØ± Ø¬Ø¯ÙŠØ¯"
