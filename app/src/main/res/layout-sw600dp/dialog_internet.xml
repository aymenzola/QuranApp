<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounde"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_internet"
        />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/check_internet"
        android:fontFamily="@font/ffshamel_book"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_normal_size_tablet" />

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ripple_effect_play_gradient"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="16dp"
        android:text="حسنا"
        android:fontFamily="@font/ffshamel_book"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_normal_size_tablet" />

</LinearLayout>