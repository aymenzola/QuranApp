<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_close_24"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_download_title_ai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جاري التحميل"
            android:textColor="@color/black"
            android:fontFamily="@font/ffshamel_book"
            android:textSize="@dimen/tv_normal_size"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <ProgressBar
            android:id="@+id/progress_bar_ai"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:indeterminate="false"
            android:layout_marginStart="10dp"
            android:progress="0"
            android:progressDrawable="@drawable/drawable_circularprogressbar"
            android:progressTint="@color/purple_700"
            android:max="100" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_arrow_circle_down_24"
        />


</LinearLayout>