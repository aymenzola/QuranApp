<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/ffshamel_book"
                android:text="عبد الباسط عبد الصمد"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_normal_size_tablet" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/reader_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/alafasy"
                app:civ_border_color="@color/purple_700"
                app:civ_border_width="1dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/view_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/audio_image"
            android:layout_alignBottom="@+id/audio_image"
            android:layout_centerHorizontal="true"
            android:background="?selectableItemBackground"
            />

        <ImageView
            android:id="@+id/audio_image"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackground"
            android:padding="14dp"
            android:src="@drawable/ic_headphones" />

    </RelativeLayout>
</layout>